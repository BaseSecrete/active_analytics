<section>
  <h2><%= page_from_params %></h2>
</section>

<section class="card">
  <h3><%= format_view_count @histogram.total %> views</h3>
  <%= render "/active_analytics/sites/histogram", histogram: @histogram %>
</section>

<ul class="grid-auto">
  <li class="card">
    <section>
      <h3>Previous page</h3>
      <%= render "table", pages: @previous_pages %>
    </section>
  </li>

  <li class="card">
    <h3>Next page</h3>
    <%= render "table", pages: @next_pages %>
  </li>
</ul>